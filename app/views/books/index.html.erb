<div class = "content">
<h3>検索結果</h3>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<table class="list">
  <tr>
    <th>No.</th>
    <th>タイトル</th>
    <th>著者</th>
    <th>出版社</th>
    <th>ジャンル</th>
    <th>在庫数</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= link_to book.name, book, class: "a2"  %></td>
    <td>
	<% book.authors.each do |author| %> 
	  <%= author.name %></br>
	<% end %>
    </td>
    <td><%= book.publisher.name %></td>
    <td><%= book.genre.name %></td>
    <td><%= defzaiko(book) %></td>
  </tr>
  <% end %>
</table>
<%= will_paginate @books %>
</div>