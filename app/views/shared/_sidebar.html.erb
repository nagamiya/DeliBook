<h2>サイドバー</h2>

<%= render "shared/login_form" unless current_member %>

<% if current_member %>
  <p class="member">
	<%if current_member.is_admin? %>
　　　　　  <p><%= current_member.name + "さん（管理者）" %></br></p>
	<% else %>
　　　　　  <p><%= current_member.name + "さん" %></br></p>
	<% end %>	
	<%= link_to "プロフィール", account_path(id: current_member.id) %></br>
	<%= link_to "貸出中一覧", member_rentals_path(member_id: current_member.id) %></br>
	<%= link_to "予約中一覧", member_reservations_path(member_id: current_member.id) %></br>
	<%if current_member.is_admin? %>
	  <%= link_to "会員一覧", admin_members_path %></br>
	<% else %>
	  <%= link_to "貸出申請一覧" %></br>
	<% end %>
        <%= link_to "貸出履歴" %></br>
	<%= link_to "ログアウト", :session,
      method: :delete, data: { confirm: "ログアウトしますか？" } %>
  </p>
<% else %>
	<%= link_to "新規登録", [:new, :member] %>	
<% end %>
