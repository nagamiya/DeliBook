<% if current_member && current_member.is_admin %>
	<%= form_tag :search_admin_books, method: :get do %>
	<table id="search_form">
	<tr>
	  <td style="text-align: right">タイトル</td>
	  <td><%= text_field_tag "book_title", "", style: "width: 120px" %></td>
	  <td style="text-align: right">著者</td>
	  <td><%= text_field_tag "book_author", "", style: "width: 120px" %></td>
	  <td rowspan="2" style="text-align: center">
	  <%= button_tag "検索", class: "submit_button", id: "search_button" %></td>
	  <td rowspan="2" style="text-align: center">
	   <%= link_to "本の追加", new_admin_book_path, id: "book_add" %></td>
	</tr>
	<tr>
	  <td style="text-align: right">出版社</td>
	  <td><%= text_field_tag "book_publisher", "", style: "width: 120px" %></td>
	  <td style="text-align: right">ジャンル</td>
	  <td><%= text_field_tag "book_genre", "", style: "width: 120px" %></td>
	</tr>
	</table>

	<% end %>
<% else %>
	<%= form_tag :search_books, method: :get do %>
	<table id="search_form">
	<tr>
	  <td style="text-align: right">タイトル</td>
	  <td><%= text_field_tag "book_title", "", style: "width: 120px" %></td>
	  <td style="text-align: right">著者</td>
	  <td><%= text_field_tag "book_author", "", style: "width: 120px" %></td>
	  <td rowspan="2" style="text-align: center">
	  <%= button_tag "検索", class: "submit_button",  id: "search_button" %></td>
	</tr>
	<tr>
	  <td style="text-align: right">出版社</td>
	  <td><%= text_field_tag "book_publisher", "", style: "width: 120px" %></td>
	  <td style="text-align: right">ジャンル</td>
	  <td><%= text_field_tag "book_genre", "", style: "width: 120px" %></td>
	</tr>

	</table>
	<% end %>
<% end %>

