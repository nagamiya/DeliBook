<h2>本の検索結果画面--Admin/booksControllerのindex</h2>
<%= link_to "本の追加", new_admin_book_path %>

<table class="list">
  <tr>
    <th>No.</th>
    <th>タイトル</th>
    <th>ISBN</th>
    <th>著者</th>
    <th>出版社</th>
    <th>ジャンル</th>
    <th>在庫数</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td style="text-align: right"><%= book.id %></td>
    <td><%= link_to book.name, [:admin,book] %></td>
    <td><%= book.isbn %></td>
    <td>
	<% book.authors.each do |author| %> 
	  <%= author.name %></br>
	<% end %>
    </td>
    <td><%= book.publisher.name %></td>
    <td><%= book.genre.name %></td>
    <td><%= book.stock_num %></td>
  </tr>
  <% end %>
</table>