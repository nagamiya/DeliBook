<div class = "content">
<h3>本の検索結果</h3>
<table class="list">
  <tr>
    <th>No.</th>
    <th>タイトル</th>
    <th>ISBN</th>
    <th>著者</th>
    <th>出版社</th>
    <th>ジャンル</th>
    <th>在庫数</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td style="text-align: right"><%= book.id %></td>
    <td><%= link_to book.name, [:admin,book], class: "a2" %></td>
    <td><%= book.isbn %></td>
    <td>
	<% book.authors.each do |author| %> 
	  <%= author.name %></br>
	<% end %>
    </td>
    <td><%= book.publisher.name %></td>
    <td><%= book.genre.name %></td>
    <td><%= defzaiko(book) %></td>
  </tr>
  <% end %>
</table>
<%= will_paginate @books %>
</div>